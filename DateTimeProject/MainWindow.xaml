<Window x:Class="DateTimeProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DateTimeProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <DatePicker x:Name="ResultDatePicker"></DatePicker>
            <StackPanel Orientation="Horizontal">
            <TextBlock>введите число дней</TextBlock>
            <TextBox x:Name="DayCountTextBlock" Width="100"></TextBox>
            </StackPanel>
            <Button Height="20" x:Name="ResultButton" Click="ResultButtonClick"></Button>
            <TextBlock x:Name="ResultTextBlock" ></TextBlock>
        </StackPanel>
    </Grid>
</Window>
